<%- include("../partials/header") -%>

  
        <h3> events List </h3>
        <table class="table table-dark">
                <thead>
                  <tr>
                    <th scope="col">#</>
                    <th scope="col">title</th>
                    <th scope="col">mainspeaker</th>
                    <th scope="col">otherSpeakers</th>
                  </tr>
                </thead>
                <tbody>
                    <% events.forEach((event)=>{%>
                      <tr>
                          <td> <%=event._id%></td>
                          <td> <%=event.title%></td>
                          <% if(event.mainspeaker != null){ %>
                          <td> <%=event.mainspeaker.name%></td>
                          <%}else{%>
                              <td>not founded</td>
                            <%}%>
                         <td>
                           <ul>
                             <%event.otherSpeakers.forEach((speaker)=>{%>
                            
                                <li><%=speaker.name%></li>

                        
                             <%})%>
                           </ul>
                         </td>
                         <td>
                           <a href="/events/edit/<%=event._id%>" class="btn btn-success">Edit</a>
                           <a href="/events/delete/<%=event._id%>" class="btn btn-danger">Delete</a>
                         </td>
                      </tr>
                      
                    <%})%>
                 
                </tbody>
              </table>